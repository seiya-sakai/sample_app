<!DOCTYPE html>
<html lang="ja" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% @post.errors.full_messages.each do |message| %>
    <%=message %>
    <% end %>
    <%=form_tag("/posts/#{@post.id}/update") do %>
     <textarea name="content"><%=@post.content %></textarea>
     <input type="submit" value="保存">
    <% end %>
  </body>
</html>
